%div{:"data-role" => 'page'}
  %div{:"data-role" => 'header'}
    %h1{:role => 'heading'}BART stations
    %a{:"data-rel" => 'dialog', :href => '#about', :"data-transition" => 'slidedown'} About
  %div{:"data-role" => 'content'}
    %ul{ :"data-role" => 'listview', :"data-theme" => 'e' }
      - Bart::Station::LIST.each do |station_hash|
        %li
          %a{:"data-rel" => 'dialog', :href => "/station/" + station_hash[:id], :"data-transition" => 'pop'} 
            = station_hash[:name]
  %div{:"data-role" => 'footer'}
%div{:"data-role" => 'page', :id => 'about'}
  %div{:"data-role" => 'header'}
    %h1{:role => 'heading'} About
  %div{:"data-role" => 'content'}
