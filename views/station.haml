%div{:"data-role" => 'page'}
  %div{:"data-role" => 'header', :"data-theme" => 'b' }
    %h1{:role => 'heading'}
      = @station.name
    %a{ :href => '/' } Home
  %div{:"data-role" => 'content', :"data-theme" => 'b' }
    %table
      %thead
        %tr
          %th Destination
          %th Estimates
      %tbody
        - @station.load_departures
        - unless @station.departures.empty?
          - @station.departures.map do |d|
            %tr
              %td
                = d.destination.name
              %td
                - d.estimates.map do |e|
                  = e.minutes 
        - else 
          %tr
            %td
              No current prediction
